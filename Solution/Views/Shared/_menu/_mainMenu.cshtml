<section>
    <aside>
        <div class="max-w-lg mx-auto pt-8">
        <!-- Category Tabs -->
        <div class="flex mb-6 bg-white rounded-full p-1 shadow-lg">
            <button class="flex items-center justify-center px-6 py-3 bg-blue-500 text-white rounded-full w-full transition-all">
                <i data-lucide="car-front" class="w-5 h-5 mr-2"></i>
                <span class="font-medium">Voitures</span>
            </button>
            <button class="flex items-center justify-center px-6 py-3 text-gray-600 hover:text-gray-800 rounded-full w-full transition-all">
                <i data-lucide="home" class="w-5 h-5 mr-2"></i>
                <span class="font-medium">Logements</span>
            </button>
        </div>
        
        <!-- Search Form -->
        <div class="bg-white rounded-2xl shadow-xl p-6 space-y-6">
            <!-- Destination -->
            <div class="relative">
                <label class="flex items-center text-sm font-semibold text-gray-700 mb-3">
                    <i data-lucide="map-pin" class="w-4 h-4 mr-2 text-blue-500"></i>
                    Destination
                </label>
                <input class="w-full border-2 border-gray-200 rounded-xl p-4 text-gray-800 focus:border-blue-500 focus:outline-none transition-colors" 
                       placeholder="Où souhaitez-vous aller ?" />
            </div>
            
            <!-- Dates -->
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="flex items-center text-sm font-semibold text-gray-700 mb-3">
                        <i data-lucide="calendar-days" class="w-4 h-4 mr-2 text-green-500"></i>
                        Arrivée
                    </label>
                    <input type="date" class="w-full border-2 border-gray-200 rounded-xl p-4 focus:border-green-500 focus:outline-none transition-colors" />
                </div>
                <div>
                    <label class="flex items-center text-sm font-semibold text-gray-700 mb-3">
                        <i data-lucide="calendar-days" class="w-4 h-4 mr-2 text-red-500"></i>
                        Départ
                    </label>
                    <input type="date" class="w-full border-2 border-gray-200 rounded-xl p-4 focus:border-red-500 focus:outline-none transition-colors" />
                </div>
            </div>
            
            <!-- Guests -->
            <div>
                <label class="flex items-center text-sm font-semibold text-gray-700 mb-3">
                    <i data-lucide="users" class="w-4 h-4 mr-2 text-purple-500"></i>
                    Voyageurs
                </label>
                <select class="w-full border-2 border-gray-200 rounded-xl p-4 focus:border-purple-500 focus:outline-none transition-colors">
                    <option>1 voyageur</option>
                    <option>2 voyageurs</option>
                    <option>3 voyageurs</option>
                    <option>4 voyageurs</option>
                    <option>5+ voyageurs</option>
                </select>
            </div>
            
            <!-- Search Button -->
            <button class="w-full bg-gradient-to-r from-blue-500 to-purple-600 hover:from-blue-600 hover:to-purple-700 text-white rounded-xl p-4 font-semibold text-lg shadow-lg hover:shadow-xl transition-all transform hover:scale-105">
                <i data-lucide="search" class="w-5 h-5 inline mr-2"></i>
                Rechercher
            </button>
        </div>
    </div>
        
        
        
    </aside>
</section>
